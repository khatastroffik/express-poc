{
  "name": "express-poc",
  "version": "1.0.0",
  "packageManager": "pnpm@10.28.0",
  "devEngines": {
    "packageManager": {
      "name": "pnpm",
      "version": "10.28.0"
    }
  },
  "description": "(Proof-of-Concept) An API node.js service template written in TypeScript.",
  "author": "khatastroffik",
  "license": "MIT",
  "keywords": [
    "typescript",
    "express",
    "template",
    "node.js",
    "khatastroffik",
    "API",
    "PoC"
  ],
  "main": "dist/index.js",
  "scripts": {
    "test": "jest --passWithNoTests && echo 'Testing completed'",
    "prepare": "husky",
    "lint": "eslint . && echo 'Linting completed'",
    "lintix": "eslint . --fix && echo 'Linting & Fixing completed'",
    "dev": "tsx watch ./src/index.ts",
    "typecheck": "tsc --noEmit && echo 'Typechecking completed'",
    "build": "rimraf ./dist && tsc && echo 'Building completed'",
    "start": "node dist/index.js",
    "postpublish": "git push --tags",
    "try-commit": "git hook run pre-commit"
  },
  "dependencies": {
    "body-parser": "^2.2.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "http-status": "^2.1.0",
    "moment": "^2.30.1",
    "morgan": "^1.10.1",
    "nanoid": "^5.1.6",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.19.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.7.3",
    "@eslint/js": "^9.39.2",
    "@eslint/json": "^0.14.0",
    "@eslint/markdown": "^7.5.1",
    "@faker-js/faker": "^10.2.0",
    "@types/body-parser": "^1.19.6",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/morgan": "^1.9.10",
    "@types/node": "^25.0.3",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/parser": "^8.53.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "eslint-plugin-jest": "^29.11.0",
    "eslint-plugin-jest-extended": "^3.0.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-extended": "^7.0.0",
    "lint-staged": "^16.2.7",
    "rimraf": "^6.1.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1",
    "yaml": "^2.8.2",
    "zod-openapi": "^5.4.6"
  },
  "lint-staged": {
    "*.ts": "pnpm lint"
  }
}
